@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>广告内容管理</title>
    <style type="text/css">
        * {
            list-style-type: none;
        }

        body {
            background-color: #FDFDF8;
        }

        a {
            text-decoration: none;
            font-size: 16px;
        }

        hr {
            height: 1px;
            background-color: #E0D0A3;
            border: none;
        }

        .badoo {
            text-align: right;
            float: right;
            height: 48px;
            line-height: 38px;
        }

            .badoo span {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
                color: #999;
            }

            .badoo a {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
            }

        .blueBtn {
            display: inline-block;
            margin-left: 20px;
            padding: 5px 10px 5px;
            font-size: 14px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 10px;
        }

        .blueBtn_s {
            display: inline-block;
            padding: 5px 10px 5px;
            font-size: 12px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 2px;
            margin-bottom: 2px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .edit_tr {
            cursor: pointer;
            width: 100%;
            color: chocolate;
        }
    </style>
    <script type="text/javascript" charset="utf-8" src="~/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/ueditor/ueditor.all.min.js"> </script>

    <!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
    <!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
    <script type="text/javascript" charset="utf-8" src="~/ueditor/lang/zh-cn/zh-cn.js"></script>

    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">

        var ul = UE.getEditor('editor_left');
        ul.ready(function () {
            ul.setContent('@Html.Raw(ViewData["left"])');
        });

        var ur = UE.getEditor('editor_right');
        ur.ready(function () {
            ur.setContent('@Html.Raw(ViewData["right"])');
        });

        // 保存左侧
        function saveAd(loc) {
            var content = '';
            if (loc == 'left') {
                content = ul.getContent();
            } else if (loc == 'right') {
                content = ur.getContent();
            }

            if (content == '' || content.length == 0) {
                alert("请输入内容");
                return;
            }
            if (content.indexOf('<p>') >= 0 && content.indexOf('</p>') < 0) {
                alert("输入的内容数据异常");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/admin/updateAd",
                data: "loc=" + loc + "&content=" + content,
                error: function (request) {
                    alert('请求错误');
                },
                success: function (data) {
                    alert(data);
                    if (data > 0) {
                        location.href = '@Request.RawUrl';
                    } else if (data == 0) {
                        alert("未更改任何内容");
                    } else {
                        alert("修改失败:" + data);
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div style="text-align:center;">发布的文章列表</div>
    <div style="width:800px;min-height:100px;margin:0px auto 0px;">
        <table style="width:100%;">
            <tr>
                <td style="width:60px;">位置:</td>
                <td>左侧的广告位(660*40),可以把指定尺寸(660*40)的图片复制进来</td>
            </tr>
            <tr>
                <td>内容:</td>
                <td>
                    <script id="editor_left" type="text/plain" style="width:683px;height:40px;">
                    </script>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><div class="blueBtn_s" onclick="saveAd('left')">保存</div> </td>
            </tr>
        </table>
    </div>

    <div style="width:800px;min-height:100px;margin:0px auto 0px;">
        <table style="width:100%;">
            <tr>
                <td style="width:60px;">位置:</td>
                <td>右侧的广告位(330*40),可以把指定尺寸(330*40)的图片复制进来</td>
            </tr>
            <tr>
                <td>内容:</td>
                <td>
                    <script id="editor_right" type="text/plain" style="width:350px;height:40px;">
                    </script>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><div class="blueBtn_s" onclick="saveAd('right')">保存</div> </td>
            </tr>
        </table>
    </div>

</body>
</html>
