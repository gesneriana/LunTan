@{
    Layout = null;
}
@*查看已发布的文章内容列表*@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>文章管理</title>
    <style type="text/css">
        * {
            list-style-type: none;
        }

        body {
            background-color: #FDFDF8;
        }

        a {
            text-decoration: none;
            font-size: 16px;
        }

        hr {
            height: 1px;
            background-color: #E0D0A3;
            border: none;
        }

        .badoo {
            text-align: right;
            float: right;
            height: 48px;
            line-height: 38px;
        }

            .badoo span {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
                color: #999;
            }

            .badoo a {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
            }

        .blueBtn {
            display: inline-block;
            margin-left: 20px;
            padding: 5px 10px 5px;
            font-size: 14px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 10px;
        }

        .blueBtn_s {
            display: inline-block;
            padding: 5px 10px 5px;
            font-size: 12px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 2px;
            margin-bottom: 2px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .edit_tr {
            cursor: pointer;
            width: 100%;
            color: chocolate;
        }
    </style>

</head>
<body>
    <div style="text-align:center;">用户管理</div>
    <div style="width:800px;min-height:600px;margin:0px auto 0px;">
        <table id="ul_tab" style="width:100%;">
            <tr>
                <td>文章编号</td>
                <td>标题</td>
                <td>关键字</td>
                <td>添加时间</td>
                <td>状态</td>
            </tr>
            @{
                if (ViewData["list"] != null)
                {
                    var artlist = (List<EFDao.Entity.article>)ViewData["list"];
                    if (artlist != null && artlist.Count > 0)
                    {
                        foreach (var item in artlist)
                        {
                            <tr class="edit_tr" onclick="javascript:window.open('/admin/edit_art/@item.id','_blank')">
                                <td>@item.id</td>
                                <td>@item.title</td>
                                <td>@item.keywords</td>
                                <td>@item.addtime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(item.state == 0 ? "隐藏" : "显示")</td>
                            </tr>
                        }
                    }
                }
            }
        </table>
        <div>
            @Html.Raw(ViewData["url"])
        </div>
    </div>
</body>
</html>
