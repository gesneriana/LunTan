@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>留言内容管理</title>
    <style type="text/css">
        * {
            list-style-type: none;
        }

        body {
            background-color: #FDFDF8;
        }

        a {
            text-decoration: none;
            font-size: 16px;
        }

        hr {
            height: 1px;
            background-color: #E0D0A3;
            border: none;
        }

        .badoo {
            text-align: right;
            float: right;
            height: 48px;
            line-height: 38px;
        }

            .badoo span {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
                color: #999;
            }

            .badoo a {
                display: inline-block;
                padding: 5px 5px 5px;
                margin-left: 7px;
                margin-right: 3px;
            }

        .blueBtn {
            display: inline-block;
            margin-left: 20px;
            padding: 5px 10px 5px;
            font-size: 14px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 10px;
        }

        .blueBtn_s {
            display: inline-block;
            padding: 5px 10px 5px;
            font-size: 12px;
            background-color: #398BFC;
            cursor: pointer;
            color: #fff;
            margin-top: 2px;
            margin-bottom: 2px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .edit_tr {
            cursor: pointer;
            width: 100%;
            color: chocolate;
        }
    </style>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        function changeState(id, state) {
            var s = 0;
            if (state == 1) {
                s = 0;
            } else {
                s = 1;
            }
            if (id > 0) {
                $.ajax({
                    type: 'post',
                    url: '/admin/liuyanState',
                    data: "id=" + id + "&state=" + s,
                    error: function (request) {
                        alert('请求错误');
                    },
                    success: function (data) {
                        if (data > 0) {
                            location.href = "@Request.RawUrl";
                        } else {
                            alert("修改失败");
                        }
                    }
                })
            } else { alert('参数错误'); }
        }
    </script>
</head>
<body>
    <div style="text-align:center;">留言内容管理</div>
    <div style="width:800px;min-height:600px;margin:0px auto 0px;">
        <table style="width:100%;">
            <tr>
                <td>用户名</td>
                <td>内容</td>
                <td>留言时间</td>
                <td>状态</td>
            </tr>
            @{
                if (ViewData["list"] != null)
                {
                    var lybList = (List<EFDao.Entity.liuyanban>)ViewData["list"];
                    if (lybList != null && lybList.Count > 0)
                    {
                        foreach (var item in lybList)
                        {
                            <text>
                                <tr class="bztr">
                                    <td>@item.uname</td>
                                    <td>@item.content</td>
                                    <td>@item.addtime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(item.state==1?"显示":"隐藏") <div class="blueBtn_s" onclick="changeState('@item.id','@item.state')">@(item.state==1?"隐藏评论内容":"显示评论内容") </div> </td>
                                </tr>
                            </text>
                        }
                    }
                }
            }
        </table>
        <div>
            @Html.Raw(ViewData["url"])
        </div>
    </div>
</body>
</html>
