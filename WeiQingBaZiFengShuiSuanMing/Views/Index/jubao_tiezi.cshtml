@{
    Layout = null;
}

<script type="text/javascript">

    function sub() {
        if ($("#reason").val() == '') {
            alert("请输入理由");
            return;
        }
        $.ajax({
            type: 'post',
            url: '/index/jubao_sub',
            data: $("#jubao_tiezi_form").serialize(),
            error: function (request) {
                alert("请求错误");
            },
            success: function (data) {
                if (data > 0) {
                    alert("举报成功");
                    cls();
                } else {
                    alert("举报失败");
                }
            }
        })
    }
</script>

<style type="text/css">
    input::-webkit-input-placeholder{color:#bbb;}
    input::-moz-placeholder{color:#bbb;}
    input:-moz-placeholder{color:#bbb;}
    input:-ms-input-placeholder{color:#bbb;}
</style>

<div style="width:100%;border:0px solid #aaa;font-size:12px;height:100%;background-color:#fff;color:#666;">
    <div style="width:100%;height:32px;line-height:32px;text-indent:1em;background-color:#eee;">
        举报
        <a href="javascript:;" onclick="cls()" style="display:inline-block;float:right;position:relative;top:6px;right:6px;"><img src="~/imgs/guanbi.png" height="20" width="20" /></a>
    </div>
    <div style="width:100%;padding-top:20px;">
        <form id="jubao_tiezi_form">
            <input type="hidden" name="tzid" value="@ViewData["tzid"]" />@*指定楼层的帖子id*@
            <table style="width:100%;">
                <tr>
                    <td style="width:30%;text-align:right;line-height:36px;height:36px;">理由:</td>
                    <td><input type="text" name="reason" id="reason" placeholder="请输入举报的原因" /><br /></td>
                </tr>
                <tr>
                    <td style="width:30%;text-align:right;line-height:36px;height:36px;">举报类型:</td>
                    <td>
                        <label for="jbt1">&emsp;内容</label> <input type="radio" name="jb_type" id="jbt1" checked="checked" value="true" />
                        <label for="jbt2">&emsp;回复</label> <input type="radio" name="jb_type" id="jbt2" value="false" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><div class="blueBtn_s" onclick="sub()" >确定举报</div> </td>
                </tr>
            </table>
        </form>
    </div>
</div>
