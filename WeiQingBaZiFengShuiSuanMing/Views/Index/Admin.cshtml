@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理员登录</title>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $("#pwd").keypress(function (event) {
                if (event.keyCode == 13) {
                    adminLogin();
                }
            });
        });

        // 管理员登录
        function adminLogin() {
            if ($("#nick_name").val() == '' || $("#pwd").val() == '') {
                alert("请选择输入用户名和密码");
                return;
            }
            $.ajax({
                type: "post",
                url: "/index/adminLogin",
                data: $("#adminLoginForm").serialize(),
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    // 登录成功之后跳转
                    if (data > 0) {
                        location.href = '/admin/index';
                    } else {
                        alert("登录失败");
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div style="width:300px;height:200px;margin:200px auto 0px;">
    <form id="adminLoginForm">
        <table>
            <tr>
                <td>用户名:</td>
                <td><input type="text" name="nick_name" id="nick_name" /> </td>
            </tr>
            <tr>
                <td>密码:</td>
                <td><input type="password" name="pwd" id="pwd"/> </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="button" value="登录" onclick="adminLogin()" /> </td>
            </tr>
        </table>
    </form>
    </div>
</body>
</html>
