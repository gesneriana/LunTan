            margin-right:20px;
        }

        #top_login_ul li {
            float: left;
            margin-left: 10px;
        }

        #top_login_ul input[type=text] {
            display: inline-block;
            width: 120px;
        }

        #top_login_ul input[type=password] {
            display: inline-block;
            width: 120px;
        }

        input::-webkit-input-placeholder {
            color: #bbb;
        }

        input::-moz-placeholder {
            color: #bbb;
        }

        input:-moz-placeholder {
            color: #bbb;
        }

        input:-ms-input-placeholder {
            color: #bbb;
        }

        #loginForm input[type=text] {
            width: 100px;
        }

        #loginForm input[type=password] {
            width: 100px;
        }

        #top_rt {
            background-color: #EAE2D5;
            font-size: 12px;
            color: #AE6252;
            height: 57px;
            width: auto;
            overflow: hidden;
            text-indent: 1em;
            padding-top: 3px;
            padding-left: 10px;
        }

        #yuce {
            margin-top: 5px;
            height: 80px;
            width: 100%;
        }

            #yuce .yuce_lt:hover {
                cursor: pointer;
            }

            #yuce .yuce_rt:hover {
                cursor: pointer;
            }

            #yuce .yuce_rt .bgyc {
                height: 70px;
                width: auto;
                overflow: hidden;
                font-size: 24px;
                color: #AC685B;
                text-align: center;
                padding-top: 7px;
            }

            #yuce .yuce_weixinhao {
                height: 80px;
                width: 580px;
            }

            #yuce .yuce_lt {
                display: inline-block;
                width: 660px;
                height: 100%;
                background-color: #F3ECE2;
            }

            #yuce .yuce_rt {
                display: inline-block;
                height: 100%;
                vertical-align: top;
                background-color: #F3ECE2;
                width: 330px;
                float: right;
            }

            #yuce .yuce_weixinhao .zzqc {
                color: #AC685B;
                font-size: 24px;
                display: inline-block;
                margin-top: 10px;
                text-indent: 14px;
                height: 70px;
                width: 140px;
            }

            #yuce .yuce_weixinhao .bzxp {
                color: #AC685B;
                font-size: 24px;
                display: inline-block;
                line-height: 80px;
                height: 80px;
                width: 200px;
                text-align: center;
                vertical-align: top;
            }

            #yuce .mfycgq {
                display: inline-block;
                height: 80px;
                vertical-align: top;
            }
            #bzjpForm input[type=text]{width:120px;}
            #bzjpForm .bzjp_lt{font-size:12px;color:#76644F;text-align:right;width:40%;}
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script language="javascript" type="text/javascript" src="~/plugins/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#pwd").keydown(function (event) {
                if (event.keyCode == 13) {
                    login();
                }
            });

            @{
                if (!ViewContext.RouteData.Values["action"].ToString().ToLower().Equals("baziyuceexplain"))
                {
                    <text>
                        $("#yuce .yuce_lt").click(function () {
                            window.open("/index/BaziyuceExplain", "_blank");
                        });
                    </text>
                }
            }

        });

        // 登录
        function login() {
            if ($("#nick_name").val().length < 3) {
                alert("用户名的长度必须不少于3个字符");
                $("#nick_name").focus();
                return;
            }
            if ($("#pwd").val().length < 6) {
                alert("密码的长度必须不少于6个字符");
                $("#pwd").focus();
                return;
            }
            $.ajax({
                type: "post",
                url: "/index/login",
                data: $("#loginForm").serialize(),
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    if (data > 0) {
                        location.href = '@Request.RawUrl';
                    } else {
                        alert(data);
                    }
                }
            });
        }

        // 打开弹窗
        function openDialog(data, width, height) {
            if (!data) {
                return;
            }
            width = width || 500;
            height = height || 320;
            var ml = 0 - width / 2;
            var mt = 0 - height / 2;
            $("#hide_div").css("margin-left", ml + 'px').css('margin-top', mt + 'px').css("height", height + 'px').css("width", width + 'px');
            $("#hide_div").html(data);
            $("#canvas_div").show();
            $("#hide_div").show();
        }

        // 关闭
        function cls() {
            $("#hide_div").html("");
            $("#hide_div").hide();
            $("#canvas_div").hide();
        }

        // 注册窗口
        function register() {
            $.ajax({
                type: "get",
                url: "/index/regview",
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    openDialog(data, 500, 320);
                }
            });
        }

        // 找回密码
        function forgetPwd() {
            $.ajax({
                type: "get",
                url: "/index/forgetPwd",
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    openDialog(data, 400, 200);
                }
            });
        }

        // 修改密码
        function changePwd() {
            $.ajax({
                type: "get",
                url: "/index/changePwd",
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    openDialog(data, 400, 200);
                }
            });
        }

        // 八字简批提交表单 bzjpForm
        function bzjpSub() {
            if ($("#born_date").val() == '') {
                alert("请选择出生时间");
                return;
            }
            $.ajax({
                type: "post",
                url: "/index/BaZiJianPi",
                data: $("#bzjpForm").serialize(),
                error: function (request) {
                    alert("请求错误");
                },
                success: function (data) {
                    // 提交成功之后,等待预测的状态
                    $("#born_date").val('')
                    alert(data);
                }
            });
        }

    </script>
</head>
<body>

    @*登录部分*@
    <div style="width:100%;background-color:#F3E9DE;margin-bottom:10px;">
        <div style="width:1000px;margin:0px auto 0px;height:32px;line-height:32px;">
            <a href="/index/index" style="display:inline-block;float:left;">首页</a> &emsp;
            <span style="color:#BCAC98;font-size:12px;display:inline-block;">生辰八字算命-周易命理预测 | 阴阳五行八卦研究 | 八字合婚配对查询</span>
            @{ if (Session["user"] == null)
                {
                    <text>
                        <form id="loginForm" style="display:inline-block;float:right;color:#666;font-size:12px;">
                            <ul id="top_login_ul">
                                <li>用户名: <input type="text" name="nick_name" width="120" id="nick_name" placeholder="用户名或者邮箱" autocomplete="on" /></li>
                                <li>密码: <input type="password" name="pwd" id="pwd" width="120" autocomplete="off" /></li>
                                <li><input type="button" value="登录" style="border-width:0px;color:blue;background-color:#F3E9DE;" onclick="login()" /></li>
                                <li><a href="javascript:;" onclick="forgetPwd()">忘记密码?</a> </li>
                                <li><input type="button" value="注册" style="border-width:0px;color:blue;background-color:#F3E9DE;" onclick="register()" /></li>
                            </ul>
                        </form>
                    </text>
                }
                else
                {
                    EFDao.Entity.user u = (EFDao.Entity.user)Session["user"];
                    <text>
                        <span style="display:inline-block;float:right;color:#666;font-size:12px;">您好,@(u.nick_name) 
                        &emsp;&emsp;<a href="javascript:;" onclick="changePwd()">修改密码</a>
                        &emsp;&emsp; <a href="/index/logout">注销登录</a></span>
                    </text>
                }
            }

        </div>
    </div>


    @*主体*@
    <div id="main" style="width:1000px;margin:0px auto 0px;height:auto;">

        @*简介*@
        <div style="width:100%;height:60px;">
            <div style="height:60px;width:440px;float:left;background-color:#EAE2D5;">
                <img src="~/imgs/title.png" title="魏清八字风水算命论坛" height="60" />
            </div>
            <div id="top_rt">
                欢迎加入算命风水相术中医交流群: 372417319
                <a target="_blank" href="//shang.qq.com/wpa/qunwpa?idkey=91d9e0f11f19ee1bd61dd49ec63bf8699dc118530fb84b063ca944f3db685f98">
                    <img border="0" src="//pub.idqqimg.com/wpa/images/group.png" height="16" alt="QQ飞车交流群" title="QQ飞车交流群">
                </a>,八字、算命、风水堪舆、手面相、择日取名、六爻八卦、壬遁太乙、相法星象专业预测群，
                由群主清清流水——魏清每天坐堂免费预测，欢迎问测者加入！
            </div>
        </div>


        @*预测*@
        <div id="yuce">

            @*左边的八字预测*@
            <div class="yuce_lt">
                <div style="height:80px;width:80px;float:left;">
                    <img src="~/imgs/weixin.jpg" height="80" />
                </div>
                <div class="yuce_weixinhao">
                    <div class="zzqc">
                        站长亲测<br />
                        <span style="font-size:14px;">&emsp;微信号:383129257</span>
                    </div>
                    <div class="bzxp">
                        八字详批:198元
                    </div>
                    <div class="mfycgq"><img src="~/imgs/mfycgq.png" height="80" /></div>
                </div>
            </div>

            @*右边的八卦六爻预测*@
            <div class="yuce_rt">
                <div style="height:80px;width:80px;float:left;">
                    <img src="~/imgs/weixin.jpg" height="80" />
                </div>
                <div class="bgyc">
                    八卦预测<br />每卦66元
                </div>
            </div>
        </div>



        @*中间主要内容部分*@
        <div id="rb" style="width:1000px;min-height:600px;">


            @*内容视图页部分*@
            <div class="rb_lt" style="width:660px;min-height:600px;margin-top:5px;background-color:#FDFDF8;display:inline-block;">
                @RenderBody()
            </div>

            @*右侧公用部分*@
            <div class="rb_rt" style="width:330px;min-height:600px;margin-top:5px;background-color:#FDFDF8;display:inline-block;vertical-align:top;">

                @*八字简批*@
                <div>
                    <h3 style="text-align:center;color:#666;">八字简批</h3>
                    <form id="bzjpForm">
                        <table width="330">
                            <tr>
                                <td class="bzjp_lt"> 姓名:</td>
                                <td><input type="text" name="name"  value="求测者"/></td>
                            </tr>
                            <tr>
                                <td class="bzjp_lt">出生地:</td>
                                <td><input type="text" name="born_place" value="未知"/></td>
                            </tr>
                            <tr>
                                <td class="bzjp_lt">性别:</td>
                                <td><input type="radio" name="sex" value="true" checked="checked" />男 <input type="radio" name="sex" value="false" />女</td>
                            </tr>
                            <tr>
                                <td class="bzjp_lt">公历出生日期:</td>
                                <td style="font-size:12px;color:#76644F;">
                                    <input class="Wdate" type="text" onClick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm' })" name="born_date" id="born_date">(北京时间)
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align:center;color:#76644F;font-size:16px;">
                                    <input type="button" value="确定" onclick="bzjpSub()" style="color:#76644F;" />
                                </td>
                            </tr>
                            @*<tr><td colspan="2" style="text-align:center;color:#76644F;font-size:16px;">今天已有0人预测</td></tr>*@
